<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:MyPlayer.Models"
             xmlns:viewmodel="clr-namespace:MyPlayer.ViewModels"
             xmlns:interfaces="clr-namespace:MyPlayer.Models.Interfaces"
             mc:Ignorable="d"
             x:Class="MyPlayer.Views.QueuePage"
             Title="Playlist"
             BackgroundColor="Black"
             >
    <!--
         <ContentPage.BindingContext>
         <model:PlaylistViewModel />
         </ContentPage.BindingContext>
    -->

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxStyle}"/>
            <Style TargetType="Label" BasedOn="{StaticResource LabelStyle}"/>

            <Style TargetType="StackLayout">
                <Setter Property="Spacing" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>

        <ToolbarItem 
            Command="{Binding SelectAllCommand}" 
            IconImageSource="{Binding AllSelectedImageSource}"/>

        <ToolbarItem 
            x:Name="ShowAlbumsToolbarItem"
            Command="{Binding ShowAlbumsCommand}" 
            CommandParameter="{Binding Source={x:Reference ShowAlbumsToolbarItem}}"
            Text="{Binding AlbumsToolItemText}" 
            Order="Secondary"/>
        
        <ToolbarItem 
            x:Name="ShowSongsToolbarItem"
            Command="{Binding ShowSongsCommand}" 
            CommandParameter="{Binding Source={x:Reference ShowSongsToolbarItem}}"
            Text="{Binding SongsToolItemText}" 
            Order="Secondary" />
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical"
            VerticalOptions="StartAndExpand"
            >

            <CollectionView  
                x:Name="ArtistsView"
                ItemsSource="{Binding Artists}"
                IsGrouped="False"
                ItemSizingStrategy="MeasureAllItems"
                SelectionMode="Single"
                HeightRequest="{Binding TotalHeight}"
                >

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            Orientation="Vertical"
                            >

                            <StackLayout
                                Orientation="Horizontal"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                >

                                <CheckBox
                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                    Color="OrangeRed"      
                                    />
                                <Label 
                                    Text="{Binding Name}"
                                    TextColor="OrangeRed"
                                    FontSize="Medium"
                                    />
                            </StackLayout>

                            <!--Albums-->
                            <CollectionView
                                ItemsSource="{Binding Albums}"
                                HeightRequest="{Binding DiscographyHeight }"
                                IsVisible="{Binding ShowAlbums, 
                                Source={RelativeSource 
                                Mode=FindAncestorBindingContext, 
                                AncestorType={x:Type viewmodel:QueueViewModel}}}"
                                >
                                
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>

                                        <StackLayout 
                                            Orientation="Vertical"
                                            >

                                            <StackLayout
                                                Orientation="Horizontal"                                                
                                                HeightRequest="38"
                                                >
                                                <CheckBox
                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                    Color="Orange"
                                                    />
                                                <Label
                                                    Text="{Binding FullName}"
                                                    TextColor="Orange"
                                                    FontSize="Small"
                                                    Margin="10,0,0,0"
                                                    />
                                            </StackLayout>
                                            <BoxView 
                                                HorizontalOptions="FillAndExpand" 
                                                Color="Orange"
                                                HeightRequest="2"
                                                IsVisible="{Binding ShowSongs, 
                                                Source={RelativeSource 
                                                Mode=FindAncestorBindingContext, 
                                                AncestorType={x:Type viewmodel:QueueViewModel}}}"
                                                />

                                            <!--Songs-->
                                            <CollectionView 
                                                x:Name="InnerView"
                                                ItemsSource="{Binding Songs}"
                                                SelectionMode="Single"
                                                HeightRequest="{Binding AlbumHeight}"
                                                IsVisible="{Binding ShowSongs, 
                                                Source={RelativeSource 
                                                Mode=FindAncestorBindingContext, 
                                                AncestorType={x:Type viewmodel:QueueViewModel}}}"
                                                >
                                                <CollectionView.Triggers>
                                                    <DataTrigger 
                                                        TargetType="CollectionView" 
                                                        Binding="{Binding Path=ShowSongs, 
                                                        Source={RelativeSource 
                                                        Mode=FindAncestorBindingContext, 
                                                        AncestorType={x:Type viewmodel:QueueViewModel}}}" 
                                                        Value="False">
                                                        
                                                        <Setter Property="HeightRequest" Value="0"/>
                                                    </DataTrigger>
                                                </CollectionView.Triggers>                                                  
                                                
                                                <CollectionView.ItemsLayout>
                                                    <LinearItemsLayout Orientation="Vertical" />
                                                </CollectionView.ItemsLayout>

                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackLayout
                                                            Orientation="Horizontal"
                                                            HeightRequest="{Binding SongHeight}"
                                                            >

                                                            <StackLayout.GestureRecognizers>
                                                                <TapGestureRecognizer 
                                                                    NumberOfTapsRequired="2"    
                                                                    Command="{Binding PlayTappedCommand, 
                                                                            Source={RelativeSource 
                                                                                Mode=FindAncestorBindingContext, 
                                                                                AncestorType={x:Type viewmodel:QueueViewModel}}}"

                                                                    CommandParameter="{Binding .}"
                                                                    />
                                                            </StackLayout.GestureRecognizers>

                                                            <CheckBox
                                                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                />

                                                            <Label
                                                                Text="{Binding Index, StringFormat='{0}.', 
                                                                Source={RelativeSource 
                                                                Mode=FindAncestorBindingContext, 
                                                                AncestorType={x:Type viewmodel:QueueViewModel}}}"
                                                                FontSize="Small"
                                                                Margin="16,0,0,0"
                                                                />

                                                            <Label
                                                                Text="{Binding Name}"
                                                                FontSize="Small"
                                                                Margin="4,0,0,0"
                                                                >


                                                            </Label>
                                                        </StackLayout>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>

                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="End"
                Margin="6"
                >
                <Editor 
                    Placeholder="Text to search"
                    PlaceholderColor="LightGray"
                    Text="{Binding SearchText, Mode=TwoWay}"
                    TextColor="White"
                    HorizontalOptions="StartAndExpand"
                    />
                <Button
                    ImageSource="baseline_clear_black_36dp.png"
                    Style="{StaticResource ImageButtonStyle}"
                    Command="{Binding ClearSearchTextCommand}"
                    WidthRequest="24"
                    HeightRequest="30"                    
                    />
                <Image
                    Source="baseline_search_black_36dp.png"/>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>