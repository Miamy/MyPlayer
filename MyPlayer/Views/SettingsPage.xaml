<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:MyPlayer.ViewModels"
             mc:Ignorable="d"
             x:Class="MyPlayer.Views.SettingsPage"
             BackgroundColor="Black"
             >


    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}"/>
            <Style TargetType="Label" BasedOn="{StaticResource LabelStyle}"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>

            <Frame 
                BackgroundColor="Black"
                BorderColor="Black"
                Padding="2"

                >
                <StackLayout
                    Orientation="Horizontal"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    >
                    <Label Text="Root  "
                           VerticalOptions="Center" 
                           HorizontalOptions="Start"
                           FontSize="Small"
                           />
                    <StackLayout 
                        Orientation="Vertical"
                        Padding="0"
                        Spacing="0"
                        HorizontalOptions="FillAndExpand"
                        >
                        <Entry
                            Text="{Binding Settings.RootFolder}"
                            TextColor="White"
                            HorizontalOptions="FillAndExpand"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontSize="Small"
                            >
                            <Entry.Triggers>
                                <EventTrigger Event="Focus">
                                </EventTrigger> 
                            </Entry.Triggers>
                        </Entry>
                        <BoxView 
                            BackgroundColor="DarkGray"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="2"
                            VerticalOptions="End"
                            >
                        </BoxView>
                    </StackLayout>
                    <Button
                        ImageSource="baseline_sd_storage_black_36dp.png"
                        Command="{Binding SelectRootCommand}"
                        HorizontalOptions="End"
                        />
                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>