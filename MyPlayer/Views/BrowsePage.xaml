<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:MyPlayer.ViewModels"
             mc:Ignorable="d"
             x:Class="MyPlayer.Views.BrowsePage"
             Title="Select root folder"
             BackgroundColor="Black"
             >

    <ContentPage.BindingContext>
        <model:BrowseViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" BasedOn="{StaticResource ImageButtonStyle}"/>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical"
            >

            <!--Title-->
            <StackLayout
                Orientation="Horizontal"
                >
                <Label 
                    Text="{Binding SelectedItem.Name}"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="StartAndExpand" 
                    FontSize="Small"
                    TextColor="White"
                    />
                <Button
                    Text="Select"
                    FontSize="Small"
                    WidthRequest="80"
                    HorizontalOptions="End"
                    Command="{Binding SelectFolderCommand}"
                    />
            </StackLayout>

            <!--Toolbar-->
            <StackLayout
                Orientation="Horizontal"
                Margin="4,6,4,12"
                >
                <Button
                    ImageSource="baseline_subdirectory_arrow_left_black_36dp.png"
                    Command="{Binding GotoParentCommand}"
                    >
                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                            <Setter Property="ImageSource" Value="baseline_subdirectory_arrow_left_black_36dp_d.png"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>
                <Button
                    ImageSource="baseline_home_black_36dp.png"
                    Command="{Binding GotoRootCommand}"
                    />
                <Button
                    ImageSource="baseline_refresh_black_36dp.png"
                    Command="{Binding RefreshCommand}"
                    />
            </StackLayout>

    
            <!--Folders-->
            <StackLayout
                x:Name="FoldersContainer"
                Orientation="Vertical"
                >
                <ListView
                    ItemsSource="{Binding Data}"
                    SeparatorVisibility="Default"
                    SeparatorColor="LightGray"
                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Orientation="Horizontal"
                                    VerticalOptions="Center"
                                    HeightRequest="40"
                                    >

                                    <Image
                                        Source="{Binding IconName}"
                                        MinimumWidthRequest="60"
                                        WidthRequest="60"
                                        HeightRequest="30"
                                        Aspect="AspectFit"
                                        />

                                    <Label
                                        Text="{Binding Name}"
                                        TextColor="White"
                                        FontSize="Medium"
                                        HorizontalOptions="StartAndExpand"
                                        VerticalTextAlignment="Center"
                                        />
                                    <Label
                                        Text="{Binding FullPath}"
                                        TextColor="White"
                                        FontSize="Small"
                                        MinimumWidthRequest="140"
                                        VerticalTextAlignment="End"
                                        IsVisible="{Binding IsVirtual}"
                                        />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>